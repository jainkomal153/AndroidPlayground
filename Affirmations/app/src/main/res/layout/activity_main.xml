<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center_vertical">

>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/linear_layout_button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="@string/linear_layout_button"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="150dp"
    />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/grid_layout_button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="@string/grid_layout_button"
            app:layout_constraintStart_toStartOf="@+id/linear_layout_button"
            app:layout_constraintEnd_toEndOf="@+id/linear_layout_button"
            app:layout_constraintTop_toBottomOf="@+id/linear_layout_button"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>